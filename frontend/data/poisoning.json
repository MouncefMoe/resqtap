[
  {
    "id": "poisoning-ingested",
    "name": "Poisoning Ingested",
    "category": "poisoning",
    "severity": "CRITICAL",
    "description": "Toxic substance swallowed",
    "image": "/images/poisoning/poisoning-ingested.jpg",
    "steps": [
      {
        "order": 1,
        "text": "Stay calm and assess: Determine what was swallowed, how much, and when. Look for containers, pills, or plant material nearby",
        "image": "/images/poison/ingest_assess.png"
      },
      {
        "order": 2,
        "text": "Call Poison Control immediately: 1-800-222-1222 (US). Available 24/7. They will guide your specific situation. Have product container ready",
        "image": "/images/poison/ingest_call.png"
      },
      {
        "order": 3,
        "text": "Do NOT induce vomiting: Unless specifically told by Poison Control. Some substances cause more damage coming back up (acids, alkalis, petroleum)",
        "image": "/images/poison/ingest_novomit.png"
      },
      {
        "order": 4,
        "text": "Do NOT give anything by mouth: No water, milk, or activated charcoal unless directed by Poison Control. Wrong treatment can worsen situation",
        "image": "/images/poison/ingest_nodrink.png"
      },
      {
        "order": 5,
        "text": "Call 911 if: Person is unconscious, having seizures, difficulty breathing, or Poison Control advises immediate emergency care",
        "image": "/images/poison/ingest_911.png"
      },
      {
        "order": 6,
        "text": "Position unconscious victim: Place in recovery position (on side) to prevent choking if vomiting occurs. Monitor breathing constantly",
        "image": "/images/poison/ingest_position.png"
      },
      {
        "order": 7,
        "text": "Save evidence: Keep container, pills, vomit, or any substance for identification. This helps medical staff provide correct treatment",
        "image": "/images/poison/ingest_save.png"
      },
      {
        "order": 8,
        "text": "Monitor vital signs: Watch breathing rate, consciousness level, skin color. Note any changes to report to emergency responders",
        "image": "/images/poison/ingest_monitor.png"
      }
    ]
  },
  {
    "id": "poisoning-inhaled",
    "name": "Poisoning Inhaled",
    "category": "poisoning",
    "severity": "CRITICAL",
    "description": "Toxic gas or fumes inhaled",
    "image": "/images/poisoning/poisoning-inhaled.jpg",
    "steps": [
      {
        "order": 1,
        "text": "Move person to fresh air immediately",
        "image": "/images/poison/inhale_fresh.png"
      },
      {
        "order": 2,
        "text": "Call 911",
        "image": "/images/poison/inhale_call.png"
      },
      {
        "order": 3,
        "text": "Open windows and doors if safe to do so",
        "image": "/images/poison/inhale_ventilate.png"
      },
      {
        "order": 4,
        "text": "Begin CPR if person is not breathing",
        "image": "/images/poison/inhale_cpr.png"
      },
      {
        "order": 5,
        "text": "Identify the source of fumes if known",
        "image": "/images/poison/inhale_identify.png"
      },
      {
        "order": 6,
        "text": "Do not re-enter contaminated area",
        "image": "/images/poison/inhale_noreenter.png"
      }
    ]
  },
  {
