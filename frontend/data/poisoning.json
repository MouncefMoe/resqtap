  {
    "id": "drug-overdose",
    "name": "Drug Overdose",
    "category": "poisoning",
    "severity": "CRITICAL",
    "description": "Excessive drug consumption requiring emergency care",
    "image": "/images/poisoning/drug-overdose.jpg",
    "steps": [
      {
        "order": 1,
        "text": "Call 911 immediately",
        "image": "/images/poison/overdose_call.png"
      },
      {
        "order": 2,
        "text": "Administer Narcan (naloxone) if opioid overdose suspected",
        "image": "/images/poison/overdose_narcan.png"
      },
      {
        "order": 3,
        "text": "Place in recovery position if unconscious but breathing",
        "image": "/images/poison/overdose_recovery.png"
      },
      {
        "order": 4,
        "text": "Begin CPR if not breathing",
        "image": "/images/poison/overdose_cpr.png"
      },
      {
        "order": 5,
        "text": "Stay with person until help arrives",
        "image": "/images/poison/overdose_stay.png"
      },
      {
        "order": 6,
        "text": "Tell responders what substances were taken",
        "image": "/images/poison/overdose_inform.png"
      }
    ]
  },
  {
    "id": "alcohol-poisoning",
    "name": "Alcohol Poisoning",
    "category": "poisoning",
    "severity": "HIGH",
    "description": "Dangerous level of alcohol consumption",
    "image": "/images/poisoning/alcohol-poisoning.jpg",
    "steps": [
      {
        "order": 1,
        "text": "Call 911 if person is unconscious or has irregular breathing",
        "image": "/images/poison/alcohol_call.png"
      },
      {
        "order": 2,
        "text": "Keep person sitting up if conscious",
        "image": "/images/poison/alcohol_situp.png"
      },
      {
        "order": 3,
        "text": "Place in recovery position if unconscious",
        "image": "/images/poison/alcohol_recovery.png"
      },
      {
        "order": 4,
        "text": "Do not leave person alone",
        "image": "/images/poison/alcohol_stay.png"
      },
      {
        "order": 5,
        "text": "Do not give coffee or cold shower",
        "image": "/images/poison/alcohol_myths.png"
      },
      {
        "order": 6,
        "text": "Monitor breathing continuously",
        "image": "/images/poison/alcohol_monitor.png"
      }
    ]
  },
  {
    "id": "food-poisoning",
    "name": "Food Poisoning",
    "category": "poisoning",
    "severity": "MEDIUM",
    "description": "Illness from contaminated food",
    "image": "/images/poisoning/food-poisoning.jpg",
    "steps": [
      {
        "order": 1,
        "text": "Rest and avoid solid foods initially",
        "image": "/images/poison/food_rest.png"
      },
      {
        "order": 2,
        "text": "Drink clear fluids to prevent dehydration",
        "image": "/images/poison/food_fluids.png"
      },
      {
        "order": 3,
        "text": "Avoid dairy, caffeine, and alcohol",
        "image": "/images/poison/food_avoid.png"
      },
      {
        "order": 4,
        "text": "Start with bland foods when ready (BRAT diet)",
        "image": "/images/poison/food_brat.png"
      },
      {
        "order": 5,
        "text": "Seek medical help if bloody stool, high fever, or severe dehydration",
        "image": "/images/poison/food_medical.png"
      },
      {
        "order": 6,
        "text": "Save sample of suspected food if possible",
        "image": "/images/poison/food_save.png"
      }
    ]
  }
]
